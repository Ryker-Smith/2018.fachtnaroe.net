sub section4 {
print '<TEXTAREA NAME="sourcecode" ROWS=16 COLS=80 WRAP></TEXTAREA><P> ';
}

sub section5 {
print '<TEXTAREA NAME=sourcecode ROWS=16 COLS=80 WRAP>';
open (OFILE, "<$tempfilepath$filename.o.tmp");
flock (OFILE, 2);
@modifiedcode = <OFILE>;
foreach $lineofcode (@modifiedcode)
{
 print "$lineofcode";
}
print "</TEXTAREA><P>";
flock (OFILE, 8);
close (OFILE);
chmod 777, "$tempfilepath$filename.o.tmp";
system ("rm -f $tempfilepath$filename.o.tmp");
}

